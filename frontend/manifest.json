{
  "manifest_version": 3,
  "name": "Trip Data Export",
  "description": "Download rides data for your trips and submit it for research",
  "version": "1.4",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "24": "icon.png",
      "32": "icon.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://riders.uber.com/trips"
  ],
  "content_scripts": [
    {
      "js": [
        "src/main.tsx"
      ],
      "matches": [
        "https://riders.uber.com/trips*"
      ]
    }
  ]
}
